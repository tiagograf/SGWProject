@model SGW.Portal.Models.LoginModel

@{
    ViewBag.Title = "Sistema Gerenciador de Workflows";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<section id="loginForm">
<h2>Log in</h2>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Login</legend>
        <ol>
            <li class="fullline">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li class="fullline">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            <li class="fullline">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </li>
        </ol>
        <input type="submit" value="Entrar" />
    </fieldset>
    <p>
        @Html.ActionLink("Esqueci minha senha.", "Forgot").
    </p>
}
</section>

<section class="social" id="socialLoginForm">
    <h2>Não Possui Usuário?</h2>
    <div class="message-info">
        <p>Entre em contato com o Administrador do Sistema e solicite seu acesso.</p>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
